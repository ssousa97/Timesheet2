<Window x:Class="TimesheetUI.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimesheetUI"
        mc:Ignorable="d"
        Title="Login" Height="150" Width="350" ResizeMode="NoResize" Keyboard.KeyDown="Entrar" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
            
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Responsavel: " FontSize="17" TextAlignment="Center"/>
            <TextBox x:Name="NomeTextBox" Width="180"  VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" FontSize="20"/>

        </StackPanel>
        <Button Grid.Row="1" Content="Entrar" Width="120" Margin="10" Click="Entrar"/>
    </Grid>
</Window>
